generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Define the enum
enum ResourceType {
  BOOK
  VIDEO
  ARTICLE
}

model Resource {
  id        String       @id @default(uuid())
  name      String
  type      ResourceType
  createdAt DateTime     @default(now())
}